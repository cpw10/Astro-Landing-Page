---

import CardCaseStudy from './CardCaseStudy.astro'

const { title, caseStudies } = Astro.props

---

<section class="bs-container bs-mt-lg" id="case-studies">

  <!-- Header -->
  { title && <h2 class="bs-h2 text-center md:text-left" data-editable="text" data-prop="case_studies_title">{ title }</h2> }

  <!-- Case studies -->
  <div data-editable="array" data-prop="case_studies">

    <!-- Case Study 1 -->
    <div class="bs-mt-md" data-editable="array-item">
      <CardCaseStudy caseStudy={ caseStudies[0] } />
    </div>

    <!-- Case studies 2 & 3 -->
    <div class="mt-8 grid lg:grid-cols-2 gap-8">
      <div data-editable="array-item">
        <CardCaseStudy caseStudy={ caseStudies[1] } />
      </div>
      <div data-editable="array-item">
        <CardCaseStudy caseStudy={ caseStudies[2] } />
      </div>
    </div>

  </div>

</section>

