---
const { title, content, cta } = Astro.props
---

<section class="bs-container py-6 flex flex-col lg:flex-row items-center">
  <div class="flex flex-col gap-6 lg:max-w-lg w-full py-16">
    <h1 class="bs-h1" data-editable="text" data-prop="title" set:html={title} />
    <div class="bs-body-text xl:text-xl flex flex-col gap-4 [&_p]:last:text-bs-foreground-dark" data-editable="text" data-prop="content" set:html={content} />
    <button type="button" class="bs-btn self-start bs-mt-sm" onclick="demo.showModal()">
      <span data-editable="text" data-prop="cta">{cta}</span>
    </button>
  </div>
  <figure class="flex place-content-center -mt-20 lg:mt-0">
    <img src="/theme-images/hero-screens.png" alt="Screens showing phone, tablet and desktop views of our website" loading="eager" />
  </figure>
</section>
